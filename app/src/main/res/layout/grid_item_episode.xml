<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:id="@+id/first">

    <ImageView android:id="@+id/imageViewItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="1dp"
        android:paddingLeft="3dp"
        android:layout_alignLeft="@+id/imageViewItem"
        android:layout_alignStart="@+id/imageViewItem"
        android:id="@+id/textViewItemName"
        android:layout_below="@+id/imageViewItem"
        android:text="Future Episode"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="#666666"
        android:gravity="left"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@+id/imageViewItem"
        android:layout_alignStart="@+id/imageViewItem"
        android:id="@+id/episodenum"
        android:layout_below="@+id/textViewItemName"
        android:textSize="12dp"
        android:paddingLeft="3dp"
        android:text="Episode 10"
        android:gravity="left"
        android:textColor="#666666" />
</RelativeLayout>
