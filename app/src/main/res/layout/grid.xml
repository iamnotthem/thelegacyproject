<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:GridLayout="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/features"
        android:layout_below="@+id/heading"
        android:orientation="horizontal"
        android:weightSum="100">






            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:id="@+id/first"
                android:layout_weight="25"


                >

                <ImageView android:id="@+id/imageViewItem"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:onClick="onClick"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:paddingLeft="3dp"
                    android:layout_alignLeft="@+id/imageViewItem"
                    android:layout_alignStart="@+id/imageViewItem"
                    android:id="@+id/textViewItemName"
                    android:layout_below="@+id/imageViewItem"
                    android:text="Future Episode"
                    android:textStyle="normal"
                    android:textSize="10dp"
                    android:textColor="#666666"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_alignLeft="@+id/imageViewItem"
                    android:layout_alignStart="@+id/imageViewItem"
                    android:id="@+id/episodenum"
                    android:layout_below="@+id/textViewItemName"
                    android:textSize="10sp"
                    android:paddingLeft="3dp"
                    android:text="Episode 10"
                    android:gravity="left"
                    android:textColor="#666666" />


            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp" android:layout_height="wrap_content"
                android:id="@+id/second"
                android:layout_weight="25"
                >

                <ImageView android:id="@+id/imageViewItem2"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:onClick="onClick"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_alignLeft="@+id/imageViewItem2"
                    android:layout_alignStart="@+id/imageViewItem2"
                    android:id="@+id/textViewItemName2"
                    android:layout_below="@+id/imageViewItem2"
                    android:text="Future Episode"
                    android:textStyle="normal"
                    android:textSize="10dp"
                    android:textColor="#666666"
                    android:gravity="start"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_alignLeft="@+id/imageViewItem2"
                    android:layout_alignRight="@+id/imageViewItem2"
                    android:id="@+id/episodenum2"
                    android:layout_below="@+id/textViewItemName2"
                    android:textSize="10sp"
                    android:text="Episode 10"
                    android:gravity="start"
                    android:textColor="#666666" />


            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="25"
                android:id="@+id/third">

                <ImageView android:id="@+id/imageViewItem3"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:onClick="onClick"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_alignLeft="@+id/imageViewItem3"
                    android:layout_alignRight="@+id/imageViewItem3"
                    android:id="@+id/textViewItemName3"
                    android:layout_below="@+id/imageViewItem3"
                    android:text="Future Episode"
                    android:textStyle="normal"
                    android:textSize="10dp"
                    android:textColor="#666666"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_alignLeft="@+id/imageViewItem3"
                    android:layout_alignRight="@+id/imageViewItem3"
                    android:id="@+id/episodenum3"
                    android:layout_below="@+id/textViewItemName3"
                    android:textSize="10sp"
                    android:text="Episode 10"
                    android:gravity="left"
                    android:textColor="#666666" />


            </RelativeLayout>
            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="25"
                android:id="@+id/fourth">

                <ImageView android:id="@+id/imageViewItem4"
                    android:layout_width="fill_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentTop="true"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:contextClickable="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_alignLeft="@+id/imageViewItem4"
                    android:layout_alignRight="@+id/imageViewItem4"
                    android:id="@+id/textViewItemName4"
                    android:layout_below="@+id/imageViewItem4"
                    android:text="Future Episode"
                    android:textStyle="normal"
                    android:textSize="10dp"
                    android:textColor="#666666"
                    android:gravity="left"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_alignLeft="@+id/imageViewItem4"
                    android:layout_alignRight="@+id/imageViewItem4"
                    android:id="@+id/episodenum4"
                    android:layout_below="@+id/textViewItemName4"
                    android:textSize="10sp"
                    android:text="Episode 10"
                    android:gravity="left"
                    android:textColor="#666666" />


            </RelativeLayout>

