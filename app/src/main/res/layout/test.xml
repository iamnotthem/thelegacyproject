<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:id="@+id/twitBorder"
        android:background="@color/colorPrimaryDark">

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twitBorder"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:padding="10dp"
        android:id="@+id/partners">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Partner Organizations"
            android:textSize="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="horizontal"
        android:id="@+id/partnerBorder"
        android:layout_below="@id/partners"
        android:background="@color/colorPrimaryDark"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partnerBorder"
        android:id="@+id/KNC"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="10"
        android:clickable="true"
        android:onClick="onClick">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="KNC.QNC (Kings No Crowns /// Queens No Crowns)"
            android:padding="10dp"
            android:layout_weight="9"
            android:gravity="start"
            android:textColor="@color/item_border_color"
            android:textSize="12dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tit" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/disclosureindicator"
            android:tint="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:id="@+id/KNCborder"
        android:layout_below="@id/KNC"
        android:background="@color/colorPrimaryDark">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/KNCborder"
        android:id="@+id/just"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="10"
        android:onClick="onClick"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="jUSt"
            android:textColor="@color/item_border_color"
            android:padding="10dp"
            android:gravity="start"
            android:textSize="16dp"
            android:layout_weight="10"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tit1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/disclosureindicator"
            android:tint="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:id="@+id/justBorder"
        android:layout_below="@id/just"
        android:background="@color/colorPrimaryDark">


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/justBorder"
        android:id="@+id/globalKids"
        android:orientation="horizontal"
        android:layout_margin="3dp"
        android:weightSum="10"
        android:onClick="onClick"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Global Kids-Arkansas (GK-AR)"
            android:textColor="@color/item_border_color"
            android:padding="10dp"
            android:gravity="start"
            android:layout_weight="9.5"
            android:textSize="16dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/tit2" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/disclosureindicator"
            android:tint="@color/colorPrimaryDark"
            android:layout_marginRight="10dp"
            android:layout_weight=".5"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:id="@+id/global"
        android:layout_below="@+id/globalKids"
        android:background="@color/colorPrimaryDark">


    </LinearLayout>
</RelativeLayout>