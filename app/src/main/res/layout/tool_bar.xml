<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:layout_alignParentBottom="true"
    android:foregroundGravity="fill_horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tools"
        android:gravity="fill_horizontal"
        >
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="1"
            android:rowCount="2">
        <LinearLayout
            android:layout_row="0"
            android:layout_column="0"
            android:weightSum="100"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/videoplaylist50"
            android:id="@+id/epiButton"
            android:layout_marginTop="10dp"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/musicTool"
            android:paddingLeft="5dp"
            android:background="@drawable/musicalnotes50"
            android:layout_toRightOf="@+id/epiButton"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/circledusermalefilled50"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:id="@+id/famButton"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/shoppingcart50"
            android:layout_marginTop="10dp"
            android:id="@+id/shopButton"
            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"/>
        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/morefilled50"
            android:layout_marginTop="10dp"
            android:id="@+id/moreButton"/>
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10"/>

        </LinearLayout>
        <LinearLayout
            android:layout_column="0"
            android:layout_row="1"
            android:weightSum="100"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Episode"
            android:textColor="#000000"
            android:id="@+id/epiText"
            android:layout_below="@+id/epiButton"

            />
        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="14"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/musicText"
            android:text="Music"
            android:textColor="#000000"
            />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="21"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fam"
            android:textColor="#000000"
            />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="25"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Store"
                android:textColor="#000000"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="20"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textColor="#000000"
                />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="12"
                android:textColor="#000000"/>


        </LinearLayout>

        </GridLayout>
    </RelativeLayout>

</android.support.v7.widget.Toolbar>