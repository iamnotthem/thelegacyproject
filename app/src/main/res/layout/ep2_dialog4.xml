<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="10dp"
              android:background="@android:color/white"
              android:layout_width="320dp"
              android:layout_height="wrap_content">

    <!-- The Area to be Shared -->
    <LinearLayout
        android:id="@+id/meme"
        android:layout_width="290dp"
        android:layout_height="290dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/photo_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <ImageView
                android:layout_margin="2dp"
                android:id="@+id/logo"
                android:layout_gravity="bottom|left"
                android:background="@drawable/iant_meme_logo_3x_1024"
                android:layout_width="90dp"
                android:layout_height="80dp"/>

            <LinearLayout
                android:gravity="right"
                android:layout_gravity="bottom|right"
                android:layout_marginBottom="60dp"
                android:layout_marginRight="44dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/trait1"
                    android:textColor="#ffff00"
                    android:textSize="22sp"
                    android:shadowColor="#000000"
                    android:shadowDx="6"
                    android:shadowDy="-6"
                    android:shadowRadius="2"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/trait2"
                    android:textColor="#ffff00"
                    android:shadowColor="#000000"
                    android:shadowDx="6"
                    android:shadowDy="-6"
                    android:shadowRadius="2"
                    android:textSize="22sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/trait3"
                    android:textColor="#ffff00"
                    android:shadowColor="#000000"
                    android:shadowDx="6"
                    android:shadowDy="-6"
                    android:shadowRadius="2"
                    android:textSize="22sp"
                    android:layout_marginTop="6dp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="12dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@android:color/black"
        android:text="@string/ep2_7"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/ep2_rg3"
        android:weightSum="2"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/rb1"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:text="Yes"
            android:layout_marginRight="8dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/rb2"
            android:textColor="@android:color/black"
            android:layout_weight="1"
            android:text="No"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>
    </RadioGroup>
</LinearLayout>